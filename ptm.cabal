executable deforest
  main-is:             Deforest.hs
  build-depends:
    base >=4.8 && <4.9

  if impl(ghcjs)
    build-depends:
      containers,
      directory,
      haskeline,
      haskell-src-exts,
      mtl,
      ptm,
      safe,
      transformers,

      ghcjs-base,
      ghcjs-dom

  hs-source-dirs:      execs
  default-language:    Haskell2010
  ghc-options:         -Wall

test-suite tests
  type:                exitcode-stdio-1.0
  default-language:    Haskell2010
  main-is:             Spec.hs
  hs-source-dirs:      test
  ghc-options:         -Wall -threaded

  build-depends:
    ptm,

    base >=4.7 && <5,
    containers,
    deepseq,
    directory,
    filepath,
    haskell-src-exts,
    hspec,
    hspec-contrib,
    HUnit

  default-extensions:
    MultiWayIf
    TupleSections
