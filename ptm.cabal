name:                ptm
version:             0.1.0.0
-- synopsis:
-- description:
-- license:
license-file:        LICENSE
author:              Ömer Sinan Ağacan
maintainer:          omeragacan@gmail.com
-- copyright:
-- category:
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

library
  exposed-modules:
    -- CoreLike.Debug
    CoreLike.Eval
    CoreLike.Parser
    CoreLike.Simplify
    -- CoreLike.Step
    CoreLike.Syntax
    -- CoreLike.TagBag
    CoreLike.ToHSE
    CoreLike.Utils

    CoreLike.MSG

    Deforestation.Deforest
    Deforestation.Parser
    Deforestation.Syntax
    Deforestation.ToHSE

    FlowChart
    FlowChart.Division
    FlowChart.Lexer
    FlowChart.Mix
    FlowChart.Parser
    FlowChart.Printer
    FlowChart.Syntax

    -- Scheme0.Syntax

  build-depends:
    base                >=4.8 && <4.9,
    binary,
    containers,
    deepseq,
    haskell-src-exts,
    mtl,
    parsec              >=3.1.9 && <3.2,
    pretty,
    safe,
    wl-pprint           >= 1.2 && < 1.3

  default-extensions:
    -- NOTE: DeriveAnyClass and GeneralizedNewtypeDeriving doesn't work well
    -- together, so we need to enable those in files. (see trac #10598)
    BangPatterns
    DeriveFunctor
    DeriveGeneric
    FlexibleContexts
    LambdaCase
    OverloadedStrings
    TupleSections
    ViewPatterns

  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -Wall

